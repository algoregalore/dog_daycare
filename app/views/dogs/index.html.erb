<h1>my dogs</h1>

<!-- lets you see all the dogs - write each loop to show the dogs in table -->
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Breed</th>
      <th>Age</th>
      <th>Owner</th>
    </tr>
  </thead>
  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.id %></td>
        <td><%= dog.name %></td>
        <td><%= dog.breed %></td>
        <td><%= dog.age %></td>
        <td><%= dog.owner.try(:name) %></td>
        <td><%= link_to "show", dog_path(dog) %></td>
        <td><%= link_to "edit", edit_dog_path(dog) %></td>
        <td><%= link_to "delete", dog, method: :delete, data: { confirm: 'u sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
<%= link_to "add a new dog!", new_dog_path %> or <%= link_to "go to owners table!",  owners_path %>
